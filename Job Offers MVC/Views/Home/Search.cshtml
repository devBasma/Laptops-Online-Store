@model IEnumerable<Job_Offers_MVC.Models.Jobs>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="panel panel-info" style="padding:5px">
        <div class="panel-heading"><h3>Search Results</h3></div>

        <div class="row">
            @foreach (var subitem in Model)
                {

                <div class="col-md-3 thumbnail" style="margin-left:20px;height:400px">
                    <img src="~/Uploads/@subitem.JobImage" style="width:300px;height:280px" />
                    <h4>@Html.DisplayFor(modelItem => subitem.JobTitle)</h4>
                    <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subitem.JobContent).ToString()))</h5>
                    @Html.ActionLink("Details", "Details", new { JobId = subitem.Id }, new { @class = "btn btn-info" })
                </div>


            }

        </div>
    </div>
