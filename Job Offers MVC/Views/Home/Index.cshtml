@model IEnumerable<Job_Offers_MVC.Models.Category>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron alert alert-info">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-7">
            <h3 style="font-family:Elephant;font-size:40px">Mountain Online</h3>

        </div>
        <div class="col-md-2"></div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <p style="color:darkblue;font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">
                New! Mountain Online now comes with Afterpay.
                Buy now, pay later is now a built-in payment option for all eligible Mountain Online merchants.
            </p>

        </div>
        <div class="col-md-3"></div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <p><a href="~/Home/About" class="btn btn-info btn-lg">Learn more about Afterpay</a></p>

        </div>
        <div class="col-md-3"></div>
    </div>
   
</div>


    @foreach (var item in Model)
    {
        <div class="panel panel-info">
            <div class="panel-heading"><h2>@Html.DisplayFor(modelItem => item.CategoryName)</h2></div>

            <div class="row panel-body">
                <h4 style="margin-left:20px">@Html.DisplayFor(modelItem => item.CategoryDescription)</h4>

                @foreach (var subitem in item.Job)
                {

                    <div class="col-md-3 thumbnail" style="margin-left:20px;margin-bottom:20px;min-height:400px">
                        <img src="~/Uploads/@subitem.JobImage" style="width:300px;height:280px"/>
                        <h4>@Html.DisplayFor(modelItem => subitem.JobTitle)</h4>
                        <h5>@Html.Raw(HttpUtility.HtmlDecode(Html.DisplayFor(modelItem => subitem.JobContent).ToString()))</h5>
                        @Html.ActionLink("Details", "Details", new { JobId = subitem.Id },new { @class="btn btn-info"})
                    </div>


                }

            </div>
        </div>
    }
       